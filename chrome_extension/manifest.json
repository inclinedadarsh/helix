{
  "manifest_version": 3,
  "name": "Helix",
  "description": "Save URLs to your Helix account.",
  "version": "2.0",
  "icons": {
    "16": "./icons/helix-16.png",
    "32": "./icons/helix-32.png",
    "48": "./icons/helix-48.png",
    "128": "./icons/helix-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}